{
  "name": "my-vue-components",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/my-vue-components.umd.js",
  "module": "./dist/my-vue-components.es.js",
  "exports": {
    ".": {
      "import": "./dist/my-vue-components.es.js",
      "require": "./dist/my-vue-components.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/my-vue-components.git"
  },
  "keywords": [
    "vue",
    "vue3",
    "components",
    "ui"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "happy-dom": "^12.10.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "typescript": "~5.2.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.0.0",
    "vue": "^3.5.0",
    "vue-tsc": "^2.0.0"
  }
}


